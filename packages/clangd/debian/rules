#!/usr/bin/make -f

NAME=clangd

clean:
	rm -rf ${CURDIR}/debian/${NAME}

.PHONY: build
build:
	mkdir -p build
	cd build && cmake -DLLVM_ENABLE_PROJECTS="clang;clang-tools-extra" -DCMAKE_BUILD_TYPE=Release ../llvm
	cd build && make clangd -j$(shell nproc)

binary:
	mkdir -p ${CURDIR}/debian/${NAME}/usr/local/bin/
	cp build/bin/clangd ${CURDIR}/debian/${NAME}/usr/local/bin/
	dh_shlibdeps
	dh_gencontrol
	dh_builddeb
	
binary-arch:
	dpkg --print-architecture
